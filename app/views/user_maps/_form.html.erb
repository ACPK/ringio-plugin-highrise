<div id="newRecordTable" class="hidden tableRecord">
	<%= render 'user_maps/heads' %>
  <%= form_for([@account,@new_user_map], :url => account_user_maps_path(@account, :rg_account_id_hash => params[:rg_account_id_hash])) do |f| %>
    <% if @new_user_map.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@new_user_map.errors.count, "error") + t('user_map.prohibited_saving') %>:</h2>
        <ul>
          <% @new_user_map.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <span class="highrise">
      <%= f.text_field :hr_user_token%>
    </span>
    <span class="ringioUser">
      <%= select :user_map, :rg_user_id, @mails_for_select %>
    </span>
    <span class="actions">
      <%= f.submit t('create') %>
    </span>
  <% end %>
</div>