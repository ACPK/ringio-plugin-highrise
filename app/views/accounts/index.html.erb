<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Hr subdomain</th>
    <th>Sync only new data</th>
    <th>Sync missing hr accounts</th>
    <th>Sync missing hr contacts</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.hr_subdomain %></td>
    <td><%= account.sync_only_new_data %></td>
    <td><%= account.sync_missing_hr_accounts %></td>
    <td><%= account.sync_missing_hr_contacts %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

